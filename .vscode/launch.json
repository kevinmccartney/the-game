  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Cloud Function",
      "type": "python",
      "request": "launch",
      "module": "functions_framework",
      "args": ["--target=function_handler"],
      "cwd": "${workspaceFolder}/the-game-api/${input:pickFunction}",
      "justMyCode": true
    },
    {
      "name": "Debug Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/bin/${input:pickScript}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["['__no-changes']"]
    }
  ],
  "inputs": [
    {
      "id": "pickFunction",
      "description": "Select Cloud Function to debug",
      "type": "pickString",
      "options": [
        "user-points-get",
        "user-points-post",
        "user-scores-get",
        "users-get",
        "users-get-entity"
      ],
      "default": "user-points-post"
    },
    {
      "id": "pickScript",
      "description": "Select script to debug",
      "type": "pickString",
      "options": ["edfi", "find-changed", "has-changed"],
      "default": "find-changed"
    }
  ]
}
